<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeatherWizard" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryLightColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryLightColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="font">@font/poppins_regular</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">@dimen/medium_text_16</item>
    </style>

    <style name="Light_Text" parent="Theme.WeatherWizard">
        <item name="fontFamily">@font/poppins_light</item>
        <item name="font">@font/poppins_light</item>
    </style>

    <style name="Extra_Light_Text" parent="Theme.WeatherWizard">
        <item name="fontFamily">@font/poppins_light</item>
        <item name="font">@font/poppins_light</item>
    </style>

    <style name="Bold_white_text" parent="Theme.WeatherWizard">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="font">@font/poppins_bold</item>
    </style>

    <style name="Bold_Search_text" parent="Theme.WeatherWizard">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="font">@font/poppins_bold</item>
    </style>

    <style name="medium_text" parent="Theme.WeatherWizard">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="font">@font/poppins_medium</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginLeft">@dimen/small_12</item>
        <item name="android:background">@color/secondaryColor</item>
    </style>

    <style name="CutButtonApperance" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="shapeAppearanceOverlay">@style/MyShapeAppearance</item>
    </style>
    <style name="MyShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomRight">24dp</item>
        <item name="cornerSizeBottomLeft">24dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
    </style>

</resources>